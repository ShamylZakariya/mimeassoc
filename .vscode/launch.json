    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'mimeassoc'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=mimeassoc"
                ],
                "filter": {
                    "name": "mimeassoc",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'mimeassoc_cli'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=mimeassoc_cli",
                    "--package=mimeassoc"
                ],
                "filter": {
                    "name": "mimeassoc_cli",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'mimeassoc_cli'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=mimeassoc_cli",
                    "--package=mimeassoc"
                ],
                "filter": {
                    "name": "mimeassoc_cli",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'mimeassoc_gui'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=mimeassoc_gui",
                    "--package=mimeassoc"
                ],
                "filter": {
                    "name": "mimeassoc_gui",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                // Set the log level
                "LOG_LEVEL_FILTER": "debug" // [off, error, warn, info, debug, trace]
                // G_MESSAGES_DEBUG and G_MESSAGES_PREFIXED are if we're using glib logging,
                // which at present, we are not.
                // "G_MESSAGES_DEBUG": "MimeAssoc", // space separated list of log domains
                // "G_MESSAGES_PREFIXED": "error warning critical message info debug",
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'mimeassoc_gui'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=mimeassoc_gui",
                    "--package=mimeassoc"
                ],
                "filter": {
                    "name": "mimeassoc_gui",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}