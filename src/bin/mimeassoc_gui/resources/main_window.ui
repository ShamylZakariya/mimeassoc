<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <menu id="main-menu">
    <item>
      <attribute name="label" translatable="yes">Show _Mime Types</attribute>
      <attribute name="action">win.show-mime-types</attribute>
    </item>
    <item>
      <attribute name="label" translatable="yes">Show _Applications</attribute>
      <attribute name="action">win.show-applications</attribute>
    </item>
    <item>
      <attribute name="label" translatable="yes">_Reset User Default Application Assignments</attribute>
      <attribute name="action">win.reset-user-default-applications</attribute>
    </item>
    <item>
      <attribute name="label" translatable="yes">_Clear Oprhaned Application Assignments</attribute>
      <attribute name="action">win.prune-orphaned-application-assignments</attribute>
    </item>
    <item>
      <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
      <attribute name="action">win.show-help-overlay</attribute>
    </item>
  </menu>

  <template class="MainWindow" parent="GtkApplicationWindow">
    <property name="title" translatable="yes">MimeAssoc</property>
    <property name="default_width">650</property>
    <property name="default_height">550</property>

    <child type="titlebar">
      <object class="AdwHeaderBar">
        <property name="title-widget">
          <object class="AdwViewSwitcher" id="switcher">
            <property name="stack">stack</property>
            <property name="policy">wide</property>
          </object>
        </property>
        <child type="start">
          <object class="GtkButton" id="reset_button">
            <property name="label">Reset</property>
          </object>
        </child>
        <child type="start">
          <object class="GtkButton" id="save_button">
            <property name="label">Save</property>
          </object>
        </child>
        <child type="end">
          <object class="GtkMenuButton">
            <property name="icon-name">open-menu-symbolic</property>
            <property name="menu-model">main-menu</property>
            <property name="tooltip-text" translatable="yes">Main Menu</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="AdwViewStack" id="stack">
        <child>
          <object class="AdwViewStackPage" id="mime_types_page">
            <property name="name">mime_types_page</property>
            <property name="title" translatable="yes">Mime Types</property>
            <property name="icon-name">emblem-documents-symbolic</property>
            <property name="child">

              <object class="GtkScrolledWindow" id="mime_types_scrolled_window">
                <property name="hscrollbar-policy">never</property>
                <property name="min-content-height">420</property>
                <property name="vexpand">True</property>
                <property name="child">
                  <object class="GtkListView" id="mime_types_list_view">
                    <style>
                      <class name="separators" />
                    </style>
                  </object>
                </property>
              </object>

            </property>
          </object>
        </child>
        <child>
          <object class="AdwViewStackPage" id="applications_page">
            <property name="name">applications_page</property>
            <property name="title" translatable="yes">Applications</property>
            <property name="icon-name">system-run-symbolic</property>
            <property name="child">

              <object class="GtkBox" id="applications_box">
                <property name="orientation">horizontal</property>
                <child>

                  <!-- Applications Page left-hand side, showing applications list -->
                  <object class="GtkScrolledWindow" id="applications_scrolled_window">
                    <property name="hscrollbar-policy">never</property>
                    <property name="min-content-height">420</property>
                    <property name="width-request">220</property>
                    <property name="vexpand">True</property>
                    <property name="child">
                      <object class="GtkListBox" id="application_list_box">
                        <property name="valign">start</property>
                        <style>
                          <class name="navigation-sidebar" />
                        </style>
                      </object>
                    </property>
                  </object>

                </child>
                <child>

                  <!-- Applications Page right-hand side, showing mime assignment list box -->
                  <object class="GtkScrolledWindow"
                    id="application_mime_type_assignment_scrolled_window">
                    <property name="hscrollbar-policy">never</property>
                    <property name="min-content-height">420</property>
                    <property name="vexpand">True</property>
                    <property name="hexpand">True</property>
                    <property name="child">
                      <object class="GtkListBox" id="application_mime_type_assignment_list_box">
                        <property name="valign">start</property>
                        <property name="margin-start">12</property>
                        <property name="margin-end">12</property>
                        <property name="margin-top">12</property>
                        <property name="margin-bottom">12</property>
                        <style>
                          <class name="boxed-list" />
                        </style>
                      </object>
                    </property>
                  </object>

                </child>
              </object>

            </property>
          </object>
        </child>

      </object>
    </child>
  </template>
</interface>